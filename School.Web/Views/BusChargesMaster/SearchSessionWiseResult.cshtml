@model IEnumerable<School.Shared.CustomModels.BusChargesMasterCustomModel>
<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                    <tr>
                        <th width="8%" align="center">
                            Sr. No
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SessionName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartPoint)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndPoint)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int rowNo = 0; }
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td width="8%" align="center">
                                    @(rowNo += 1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SessionName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartPoint)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndPoint)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    <i class="@(item.IsActive == true ? "edt fa fa-check" : "dlt fa fa-times")" id="@item.BusChargesMasterId" onclick="ChangeStatus('@item.BusChargesMasterId');"></i>
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Create", new { id = item.BusChargesMasterId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.BusChargesMasterId }) |
                                    <a href="javascript:void(0)" onclick="DeleteStatus(@item.BusChargesMasterId);">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>