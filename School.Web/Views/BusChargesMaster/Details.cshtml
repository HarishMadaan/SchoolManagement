@model School.Shared.CustomModels.BusChargesMasterCustomModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="page-title">
    <div>
        <h1><i class="fa fa-edit"></i> Bus Charges Master</h1>
    </div>
    <div>
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home fa-lg"></i></a></li>
            <li>@Html.ActionLink("BusChargesMaster", "Index")</li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">

                        <hr />
                        <dl class="dl-horizontal">
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.SessionName)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.SessionName)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.StartPoint)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.StartPoint)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.EndPoint)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.EndPoint)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.Amount)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.Amount)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                                <div class="col-md-8">
                                    <i class="@(Model.IsActive == true ? "edt fa fa-check" : "dlt fa fa-times")"></i>
                                </div>
                            </div>
                            
                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Edit", "Create", new { id = Model.BusChargesMasterId }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- Javascripts-->
<script src="~/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(window).load(function () {
            $('#loader').hide();
        });
    });

</script>