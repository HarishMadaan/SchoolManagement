@model IEnumerable<School.Shared.CustomModels.FeeMasterCustomModel>

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                    <tr>
                        <th width="8%" align="center">
                            Sr. No
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalFee)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int rowNo = 0; }
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td width="8%" align="center">
                                    @(rowNo += 1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClassName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalFee)
                                </td>
                                <td>
                                    <i class="@(item.IsActive == true ? "edt fa fa-check" : "dlt fa fa-times")" id="@item.FeeMasterId" onclick="ChangeStatus('@item.FeeMasterId');"></i>
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Create", new { id = item.FeeMasterId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.FeeMasterId }) |
                                    <a href="javascript:void(0)" onclick="DeleteStatus(@item.FeeMasterId);">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>