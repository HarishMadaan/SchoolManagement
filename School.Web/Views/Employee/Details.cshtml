@model School.Shared.CustomModels.EmployeeMasterCustomModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="page-title">
    <div>
        <h1><i class="fa fa-edit"></i> Employee Master</h1>
    </div>
    <div>
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home fa-lg"></i></a></li>
            <li>@Html.ActionLink("Employee", "Index")</li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">

                        <hr />
                        <dl class="dl-horizontal">
                            
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.FName)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.FName)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.LName)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.LName)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.MobileNo)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.MobileNo)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.EmailId)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.EmailId)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.City)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.City)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.State)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.State)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.Country)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.Country)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.Address)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.Address)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.Qualification)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.Qualification)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.Experience)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.Experience)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.Designation)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.Designation)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.DateOfJoining)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.DateOfJoining)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.DateOfBirth)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.DateOfBirth)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.BloodGroup)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.BloodGroup)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.DDate)
                                </label>
                                <div class="col-md-8">
                                    @Html.DisplayFor(model => model.DDate)
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.Image)
                                </label>
                                <div class="col-md-8">
                                    @{String EmpImage = Model.Image;}
                                    @{
                                        if (!String.IsNullOrEmpty(EmpImage))
                                        {
                                            EmpImage = "/Uploads/Employee/e_" + EmpImage;
                                            <img src="@EmpImage" alt=" " height="50" width="50" style="float:left;" />
                                        }
                                    }
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label class="col-lg-4 control-label">
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </label>
                                <div class="col-md-8">
                                    <i class="@(Model.IsActive == true ? "edt fa fa-check" : "dlt fa fa-times")"></i>
                                </div>
                            </div>

                    <p>
                        @Html.ActionLink("Edit", "Create", new { id = Model.EmployeeId }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>
    </div>


<!-- Javascripts-->
<script src="~/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript" src="~/js/plugins/bootstrap-datepicker.min.js"></script>
<script type="text/javascript" src="~/js/plugins/select2.min.js"></script>
<script type="text/javascript" src="~/js/plugins/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(window).load(function () {
            $('#loader').hide();
        });
    });
    $('#demoDate').datepicker({
        format: "yyyy-mm-dd",
        autoclose: true,
        todayHighlight: true
    });
    $('#DateOfBirth').datepicker({
        format: "yyyy-mm-dd",
        autoclose: true,
        todayHighlight: true
    });
    $('#DateOfJoining').datepicker({
        format: "yyyy-mm-dd",
        autoclose: true,
        todayHighlight: true
    });
</script>


